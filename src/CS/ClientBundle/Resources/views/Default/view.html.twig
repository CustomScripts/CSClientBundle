{% extends "CSCoreBundle:Layout:single_column.html.twig" %}

{% block title %}{{ 'view_client'|trans }}{% endblock %}

{% block content %}

	<div class="row-fluid">
		<h2>
			{{ client }} <label class="label label-{{ client_status_label(client) }}">{{ client.status }}</label>
		</h2>

		{{ client.website }}

		<div class="pull-right">
			<a href="#" class="btn"><i class="icon-edit"></i> {{ "edit"|trans }}</a>
		</div>
	</div>


	<div class="row-fluid">
		<div class="span6">
			<h3>{{ "contacts"|trans }}</h3>

			{% for contact in client.contacts %}
				<div class="span5">
					<h4>{{ contact.firstname }} {{ contact.lastname }}</h4>

					{% for contact_details in contact.details %}
						<strong>{{ contact_details.type|title }}</strong>: {{ contact_details.value }}
					{% endfor %}
				</div>
			{% endfor %}

		</div>
	</div>

{% endblock %}
